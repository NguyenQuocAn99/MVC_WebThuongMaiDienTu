@using Seminar_1.Models
@model IEnumerable<Don>

<div class="panel-body widget-shadow">
    <h3 style="padding-bottom:30px;">Đơn chưa duyệt</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Mã đơn</th>
                <th>Mã người mua</th>
                <th>Mã người bán</th>
                <th>Ngày đặt</th>
                <th>Duyệt</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.MaD.ToString()</th>
                <td>@item.MaNguoiMua.ToString()</td>
                <td>@item.MaNguoiBan.ToString()</td>
                <td>@item.NgayDat.ToString()</td>
                <td>
                    <a href=@Url.Action("DuyetDonHang","Admin",new{@MaDH=item.MaD,@strURL=Request.Url.ToString()})>Duyệt</a>
                    @*@Ajax.ActionLink("Duyệt", "DuyetDonHang", new {@MaDH=item.MaD}, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "Ketqua", InsertionMode = InsertionMode.Replace })*@
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
