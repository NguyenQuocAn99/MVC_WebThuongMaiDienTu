@using Seminar_1.Models
@model IEnumerable<ChiTietDon>

<div class="panel-body widget-shadow">
    <h3 style="padding-bottom:30px;">Đơn chưa duyệt</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Mã Chi tiết</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
            </tr>
        </thead>
        <tbody>
            @{decimal tongTien = 0; }
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.MaCTD.ToString()</th>
                    <td>@item.TenSP.ToString()</td>
                    <td>@item.SoLuong.ToString()</td>
                    <td>@item.DonGia.ToString("#,##")</td>
                </tr>
                tongTien = tongTien + item.DonGia;
            }
            <tr>
                <th colspan="3">Tổng tiền</th>
                <th>@tongTien.ToString("#,##")</th>
            </tr>
        </tbody>
    </table>

    <div style="text-align:center; padding:20px;">
        @Ajax.ActionLink("Quay lại", "DonHangChuaGui", new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "Ketqua", InsertionMode = 0 })
    </div>
</div>

