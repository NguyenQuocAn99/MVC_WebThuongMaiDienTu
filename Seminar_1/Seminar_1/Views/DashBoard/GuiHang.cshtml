@using Seminar_1.Models
@model IEnumerable<Don>

<div class="panel-body widget-shadow">
    <h3 style="padding-bottom:30px;">Đơn chưa gửi</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Mã đơn</th>
                <th>Mã người mua</th>
                <th>Ngày đặt</th>
                <th>Gửi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.MaD.ToString()</th>
                    <td>@item.MaNguoiMua.ToString()</td>
                    <td>@item.MaNguoiBan.ToString()</td>
                    <td>@item.NgayDat.ToString()</td>
                    <td>
                        @*<a href=@Url.Action("GuiHang","DashBoard",new{@MaDH=item.MaD,@strURL=Request.Url.ToString()})>Gửi</a>*@
                        @Ajax.ActionLink("Gửi", "GuiHang", new {@MaDH=item.MaD}, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "Ketqua", InsertionMode = InsertionMode.Replace })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


